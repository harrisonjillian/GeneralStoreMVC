@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>General Store</h1>
    <p class="lead">General Store is a simple web app powered by ASP.NET Web MVC that allows users to come in and record different products and rate them</p>
    <p>@Html.ActionLink("Learn More About Us", "About")</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>
            Our General Store, located in rural Indiana, is host to a multitude of fine food and items of distinction.<br />
            Come browse our products and see what we have for you.
        </p>
        <p> @Html.ActionLink("Check Products", "Index", "Product", null, new { @class = "btn btn-primary btn-large" })</p>
        @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <p>At this General Store we strive to meet the needs of our customers</p>
        <p> @Html.ActionLink("Check Customers", "Index", "Customer", null, new { @class = "btn btn-primary  btn-large" })</p>
       @* <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>Transactions</h2>
        <p>View Transactions here</p>
        <p> @Html.ActionLink("Check Transactions", "Index", "Transaction", null, new { @class= "btn btn-primary btn-large" })</p>
        @*@<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p> *@
